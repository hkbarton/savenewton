<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actLocalScore_mainly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout android:id="@+id/actLocalScore_titleLy"
        android:layout_width="fill_parent"
        android:layout_height="40px" 
        android:layout_alignParentTop="true"/>
    <com.google.android.gms.ads.AdView android:id="@+id/adView"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	ads:adUnitId="@string/adUnitID"
    	ads:adSize="BANNER"/>
    <ListView android:id="@+id/actLocalScore_mainList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/actLocalScore_titleLy"
        android:layout_above="@id/adView"/>
    <TextView android:id="@+id/actLocalScore_tipNoData"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/actLocalScore_titleLy"
        android:layout_above="@id/adView"
        android:gravity="center"
        android:text="@string/tipNoScore"
        android:textSize="18dp" 
        android:visibility="gone"/>
</RelativeLayout>